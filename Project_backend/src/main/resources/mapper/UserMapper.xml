<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matchmaking.backend.mapper.UserMapper">


    <select id="findUserByEmail" resultType="com.matchmaking.backend.entity.User">
        select * from user where email=#{email}
    </select>


    <insert id="createUser" >
        insert into user(email,password,nickname,avatar,create_time,last_login_time,status)
        values (#{email},#{password},#{nickname},#{avatar},#{createTime},#{lastLoginTime},#{status})
    </insert>

    <update id="updateLoginTime">
        update user set last_login_time=#{loginTime} where email=#{email}
    </update>
</mapper>