<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matchmaking.backend.mapper.AccountMapper">


    <select id="findAccountByEmail" resultType="com.matchmaking.backend.entity.Account">
        select * from account where email=#{email}
    </select>

    <insert id="createAccount" >
        insert into account(email,password,create_time,last_login_time,role_id)
        values (#{email},#{password},#{createTime},#{lastLoginTime},#{roleId})
    </insert>

    <update id="updateLoginTime">
        update account set last_login_time=#{loginTime} where email=#{email}
    </update>

    <update id="updatePassword">
        update user set password=#{newPassword} where email=#{email}
    </update>

</mapper>