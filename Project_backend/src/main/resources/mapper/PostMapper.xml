<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matchmaking.backend.mapper.PostMapper">
    <insert id="createPost">
        insert into post(title,description,industry,position,address,employment_type,educational_background,min_salary,max_salary,company_id)
        values(#{title},#{description},#{industry},#{position},#{address},#{employmentType},#{educationalBackground},#{minSalary},#{maxSalary},
               #{companyId})
    </insert>

    <select id="getAllPosts" resultType="com.matchmaking.backend.entity.Post">
        select * from post
    </select>

    <update id="updatePost" parameterType="com.matchmaking.backend.entity.Post">
        update post set title=#{title},description=#{description},position=#{position},address=#{address},industry=#{industry},
                        employment_type=#{employmentType},educational_background=#{educationalBackground},min_Salary=#{minSalary},
                        max_Salary=#{maxSalary} where post_id=#{postId}
    </update>

    <select id="getPost" resultType="com.matchmaking.backend.entity.Post">
        select * from post where post_id =#{postId}
    </select>

    <select id="getPostsByCompanyId" resultType="com.matchmaking.backend.entity.Post">
        select * from post where company_id=#{companyId}
    </select>
    
    <delete id="deletePost">
        delete
        from post
        where post_id=#{postId};
    </delete>
</mapper>